<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <constant name="struts.objectFactory.spring.autoWire" value="type"/>
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.i18n.encoding" value="UTF-8"></constant>
    <constant name="struts.multipart.saveDir" value="/tmp"/>
    <constant name="struts.multipart.maxSize" value="10485760"/>

    <package name="cn.venice.web" extends="json-default,stuts-default">
        <action name="*_*action_*" class="{1}_{2}action" method="{3}">
            <result type="json">
                <param name="root">resJsonObj</param>
            </result>
            <result name="exportResult" type="stream">
                <param name="contentType">
                    application/vnd.ms-excel
                </param>
                <param name="inputName">excelStream</param>
                <param name="contentDisposition">
                    attachment;filename="${downloadFileName}"
                </param>
                <param name="bufferSize">1024</param>
            </result>
            <result name="downloadWord" type="stream">
                <param name="contentType">
                    application/vnd.ms-word
                </param>
                <param name="inputName">excelStream</param>
                <param name="contentDisposition">
                    attachment;filename="${downloadFileName}"
                </param>
                <param name="bufferSize">1024</param>
            </result>
            <result name="openPage">{3}.jsp</result>
        </action>
        <action name="login" class="loginaction">
            <result type="json">
                <param name="root">resJsonStr</param>
            </result>
        </action>
        <action name="regist" class="registaction">
            <result type="json">
                <param name="root">resJsonStr</param>
            </result>
        </action>
        <action name="deptInfoAction" class="deptInfoAction">
            <result type="json">
                <param name="root">resJsonObj</param>
            </result>
        </action>
        <action name="pagesAction_*" class="pagesAction" method="{1}">
            <result name="success">
                /htmlcontent.jsp
            </result>
        </action>
    </package>

    <package name="cn.venice.app" extends="json-default">
        <action name="appaction_*" class="appaction" method="{1}">
            <result type="json">
                <param name="root">resJsonObj</param>
            </result>
        </action>
    </package>

</struts>